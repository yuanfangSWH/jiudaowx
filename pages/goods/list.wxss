/* pages/goods/list.wxss */

page {
  background-color: white;
}

.brands {
  padding: 0 10px 10px 10px;
  font-size: 14px;
  background-color: #EFEFF4;
}

.brands .brand {
  margin-right: 25px;
}

.bd {
  padding: 0 10px;
}

.bd .filter {
  padding: 4px 0;
  border-bottom: 1px solid #eee;
}

.bd .filter .item {
  display: inline-block;
  font-size: 13px;
  line-height: 16px;
  padding: 4px 6px;
  border-radius: 4px;
  margin-right: 10px;
}

.bd .filter .item.active {
  background-color: #ddd;
}

.goods-list {
  margin-top: 10px;
}

.goods {
  position: relative;
  margin-top: 5px;
  border: 1px solid #f6f6f6;
  border-radius: 2px;
  background-color: #F6F6F6;
}

.goods .pic {
  width: 100px;
  height: 100px;
}

.goods .buy {
  position: absolute;
  right: 15px;
  bottom: 8px;
  width: 42px;
  height: 42px;
  color: white;
  font-size: 12px;
  text-align: center;
  line-height: 42px;
  background-size: 100% 100%;
  background-image: url("data:image/png;base64,");
}

.goods .info {
  position: relative;
  padding: 5px 10px;
}

.goods .info .name {
  font-size: 15px;
}

.goods .info .introduction {
  font-size: 12px;
  color: #999;
}

.goods .info .footer {
  position: absolute;
  left: 10px;
  bottom: 5px;
}

.goods .info .price {
  font-size: 18px;
  margin-right: 10px;
}

.goods .info .sold {
  font-size: 12px;
  color: #FDA43B;
}